@using WebShop.Data.ViewModels;
@model RegisterVM;

@{ ViewData["Title"] = "Регистрация нового пользователя"; }

<div class="row">
    <div class="col-md-6 offset-3 border border-dark rounded" style="background-color: #d6d6d6;">
        <p>
            <h4>Регистрация нового пользователя</h4>
        </p>

        @if (TempData["Error"] != null)
        {
        <div class="col-md-12 alert alert-danger">
            <span>
                <b>Ошибка !</b> - @TempData["Error"]
            </span>
        </div>            
        }

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <input asp-for="FullName" class="form-control" placeholder="Имя"/>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="EmailAddress" class="form-control" placeholder="Почта"/>
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" class="form-control" placeholder="Пароль"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Подтверждение пароля"/>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input class="btn btn-outline-success float-right" type="submit" value="Зарегистрироваться" />
                        <a class="btn btn-outline-secondary" asp-controller="Movies" asp-action="Index">Отмена</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>